{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainUsername": {
      "type": "securestring",
      "metadata": {
        "description": "Username of the domain account used to join the machine"
      }
    },
    "domainPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password of the domain account"
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    },
    "uniqueName": {
      "type": "string",
      "metadata": {
        "description": "Unique computer name, max 7 characters. Will be appended to the prefix MAXAZ-."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Access account password from key vault"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Access account username"
      }
    },
    "domainFQDN": {
      "type": "securestring",
      "metadata": {
        "description": "FQDN of the domain"
      }
    },
    "ouPath": {
      "type": "securestring",
      "metadata": {
        "description": "OU for the computer account object"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVMAgent": true,
            "enableAutomaticUpdates": true
          }
        },
        "storageProfile": {
          "osDisk": {
            "name": "osdisk",
            "osType": "Windows",
            "vhd": {
              "uri": "[concat('http://',variables('storageAccountName'),'.blob.core.windows.net/',variables('vmStorageAccountContainerName'),'/',variables('OSDiskName'),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "image": {
              "uri": "[concat('https', '://', 'maxwin10er21.blob.core.windows.net', '/win10/MAXImage-osDisk.23819f7f-cce8-4c65-8871-ca4fbfe1b010.vhd')]"
            }
          },
          "dataDisks": [ ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',variables('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      },
      
        "resources": [
          {
            "name": "ConfigureMachine",
            "type": "extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'))]",
              "[resourceID('Microsoft.Compute/virtualMachines/extensions', variables('vmName'), 'joindomain')]"
            ],
            "tags": {
              "displayName": "ConfigureMachine"
            },
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "CustomScriptExtension",
              "typeHandlerVersion": "1.4",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": [
                  "[concat(parameters('_artifactsLocation'), '/', variables('ScriptFolder'), '/', variables('ScriptFileName'), parameters('_artifactsLocationSasToken'))]"
                ],
                "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('ScriptFolder'), '/', variables('ScriptFileName'))]"
              }
            }
          }
        ]
    },
    
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmName'),'/joindomain')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainFQDN')]",
          "Options": "[variables('domainJoinOptions')]",
          "OUPath": "[parameters('ouPath')]",
          "Restart": "true",
          "User": "[parameters('domainUsername')]"
        },
        "protectedsettings": {
          "Password": "[parameters('domainPassword')]"
        }
      },
      "dependsOn": [
      "[resourceID('Microsoft.Compute/virtualMachines', variables('vmName'))]"
        ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_GRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "westus",
      "tags": { },
      "properties": { },
      "dependsOn": [ ]
    }
  ],
  "variables": {
    "apiVersion": "2016-03-30",
    "dataDisk1VhdName": "[concat(variables('uniqueID'), 'disk1')]",
    "domainJoinOptions": 3,
    "domainNameLabel": "[concat('maxaz-', variables('uniqueID'))]",
    "nicID": "/subscriptions/5555afd9-779e-4741-97eb-f96bccf2d2e1/resourceGroups/ERNetwork/providers/Microsoft.Network/virtualNetworks/MAXLab-CORP-USW-VNET-1/subnets/TenantSubnet",
    "nicName": "[concat(variables('vmName'), '-NIC')]",
    "nsgID": "/subscriptions/5555afd9-779e-4741-97eb-f96bccf2d2e1/resourceGroups/max-win10-er2-1/providers/Microsoft.Network/networkSecurityGroups/MAXBasicNSG",
    "OSDiskName": "[concat(variables('vmName'), '-osdisk')]",
    "resourceGroup": "MAX-Win10-ER2-1",
    "sizeOfDiskInGB": "60",
    "storageAccountName": "maxwin10er21",
    "storageAccountType": "Standard_LRS",
    "subnetName": "Subnet-1",
    "subnetPrefix": "10.138.39.128/25",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/', variables('subnetName'))]",
    "virtualNetworkName": "MAXLab-CORP-USW-VNET-1",
    "vmName": "[concat(variables('vmPrefix'), '-', parameters('uniqueName'))]",
    "vmPrefix": "MAXAZ",
    "vmSize": "Standard_D2",
    "vmStorageAccountContainerName": "vhds",
    "VnetID": "[resourceId(variables('VnetResourceGroup'), 'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "VnetResourceGroup": "ERNetwork",
    "uniqueID": "[uniqueString(resourceGroup().id, deployment().name)]",
    "ScriptFolder": "CustomScripts",
    "ScriptFileName": "ConfigureMachine.ps1"
  }
}
